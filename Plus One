class Solution(object):
    def plusOne(self, digits):
        n = len(digits)

        # Traverse from last digit
        for i in range(n - 1, -1, -1):
            if digits[i] < 9:
                digits[i] += 1
                return digits     # no carry, done
            else:
                digits[i] = 0     # carry generated

        # If all digits were 9 (like 999 â†’ 1000)
        return [1] + digits
